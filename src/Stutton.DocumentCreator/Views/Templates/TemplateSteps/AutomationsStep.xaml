<UserControl x:Class="Stutton.DocumentCreator.Views.Templates.TemplateSteps.AutomationsStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:templateSteps="clr-namespace:Stutton.DocumentCreator.Views.Templates.TemplateSteps"
             xmlns:templateSteps1="clr-namespace:Stutton.DocumentCreator.ViewModels.Templates.TemplateSteps"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance templateSteps1:AutomationsStepViewModel}">
    <StackPanel>
        <ListView ItemsSource="{Binding Automations}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="288"
                                    Header="Type"
                                    DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="288"
                                    Header="Description"
                                    DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PopupBox DockPanel.Dock="Right"
                                                         PlacementMode="BottomAndAlignRightEdges"
                                                         StaysOpen="False">
                                    <StackPanel>
                                        <Button Command="{Binding DataContext.DeleteAutomationCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type templateSteps:AutomationsStep}}}"
                                                CommandParameter="{Binding}"
                                                Content="Delete"/>
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Margin="0,8,0,0"
                HorizontalAlignment="Right"
                Command="{Binding AddAutomationCommand}"
                Content="ADD"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Add Automation" />

    </StackPanel>
</UserControl>
